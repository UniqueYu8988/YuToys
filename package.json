{
  "name": "yutoys",
  "version": "2.0.0",
  "main": "dist-electron/main.js",
  "description": "YuToys - 小羽桌面助理",
  "author": "Yu",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3",
    "framer-motion": "^12.4.7",
    "lucide-react": "^0.477.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "electron": "^40.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.yu.yutoys",
    "productName": "YuToys",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron",
      "public"
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "asar": true,
    "compression": "store"
